<div class="modal-header">
    <button class="close" data-dismiss="modal">
        <span>&times;</span>
    </button>
    <h4 class="modal-title">{{ trans('module::message.choose_widget') }}</h4>
</div>

<div class="modal-body">
    {% if not extensions.isEmpty() %}
        <ul class="nav nav-stacked">
            {% for extension in extensions %}
                <ul class="nav nav-pills nav-stacked">
                    {% for extension in extensions %}
                        <li class="nav-item">
                            <a href="{{ url_to('admin/dashboard/widgets/create?extension=' ~ extension.namespace) }}"
                               class="nav-link">
                                <strong>{{ trans(extension.title) }}</strong>
                                <br>
                                <small>{{ trans(extension.description) }}</small>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            {% endfor %}
        </ul>
    {% else %}
        {{ trans('streams::message.no_results') }}
    {% endif %}
</div>
